{
    "manifest_version": 3,
    "name": "Highlighter Extension",
    "version": "1.0",
    "description": "A Chrome extension to highlight content on a web page",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  